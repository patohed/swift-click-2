---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Logo from '../components/Logo.astro';
---

<BaseLayout title="Contacto - SwiftClick">
	<section class="min-h-screen relative z-10 overflow-hidden flex flex-col" style="width: 100vw; min-height: 100vh; background: linear-gradient(135deg, #0a0a0f 0%, #1a1a2e 30%, #2d2550 60%, #3d3570 100%);">
		
		<!-- Header -->
		<header class="w-full z-20 p-3 sm:p-4 md:p-6 lg:p-8">
			<div class="flex items-center">
				<Logo size="sm" />
			</div>
			<div class="mt-1.5 ml-7 sm:mt-3 sm:ml-10 md:mt-4 md:ml-12">
				<span class="text-gray-300 text-xs sm:text-sm md:text-base font-medium tracking-wide">Marketing Digital</span>
			</div>
		</header>

		<!-- Contenedor principal centrado -->
		<div class="flex-1 flex flex-col items-center justify-center max-w-4xl mx-auto w-full px-4 sm:px-6 md:px-8 py-8 sm:py-12">
			
			<!-- Título principal -->
			<h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-white text-center mb-3 sm:mb-4 leading-tight tracking-tight">
				<span style="background: linear-gradient(135deg, #6a5acd 0%, #9d8df1 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">HABLEMOS</span>
			</h1>

			<p class="text-sm sm:text-base md:text-lg text-gray-300 text-center mb-8 sm:mb-10 md:mb-12">
				Completa el formulario y nos pondremos en contacto contigo
			</p>

			<!-- Formulario de contacto -->
			<form class="w-full max-w-2xl space-y-5 sm:space-y-6">
				
				<!-- Nombre y Empresa en dos columnas -->
				<div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-5">
					<!-- Campo Nombre -->
					<div class="relative">
						<div class="absolute top-4 right-4 flex gap-1.5">
							<div class="w-2 h-2 rounded-full" style="background: #b8a9ff;"></div>
							<div class="w-2 h-2 rounded-full" style="background: #b8a9ff;"></div>
							<div class="w-2 h-2 rounded-full" style="background: #b8a9ff;"></div>
						</div>
						<input 
							type="text" 
							name="nombre" 
							placeholder="Nombre completo*"
							required
							class="w-full px-5 py-4 rounded-2xl bg-transparent border border-purple-400/30 text-white placeholder-gray-400 focus:outline-none focus:border-purple-400/60 transition-all duration-300"
							style="backdrop-filter: blur(10px); background: rgba(42, 32, 80, 0.3);"
						/>
					</div>

					<!-- Campo Empresa -->
					<div class="relative">
						<div class="absolute top-4 right-4 flex gap-1.5">
							<div class="w-2 h-2 rounded-full" style="background: #b8a9ff;"></div>
							<div class="w-2 h-2 rounded-full" style="background: #b8a9ff;"></div>
							<div class="w-2 h-2 rounded-full" style="background: #b8a9ff;"></div>
						</div>
						<input 
							type="text" 
							name="empresa" 
							placeholder="Empresa*"
							required
							class="w-full px-5 py-4 rounded-2xl bg-transparent border border-purple-400/30 text-white placeholder-gray-400 focus:outline-none focus:border-purple-400/60 transition-all duration-300"
							style="backdrop-filter: blur(10px); background: rgba(42, 32, 80, 0.3);"
						/>
					</div>
				</div>

				<!-- Email y Teléfono en dos columnas -->
				<div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-5">
					<!-- Campo Email -->
					<div class="relative">
						<div class="absolute top-4 right-4 flex gap-1.5">
							<div class="w-2 h-2 rounded-full" style="background: #b8a9ff;"></div>
							<div class="w-2 h-2 rounded-full" style="background: #b8a9ff;"></div>
							<div class="w-2 h-2 rounded-full" style="background: #b8a9ff;"></div>
						</div>
						<input 
							type="email" 
							name="email" 
							placeholder="Email*"
							required
							class="w-full px-5 py-4 rounded-2xl bg-transparent border border-purple-400/30 text-white placeholder-gray-400 focus:outline-none focus:border-purple-400/60 transition-all duration-300"
							style="backdrop-filter: blur(10px); background: linear-gradient(135deg, rgba(42, 32, 80, 0.7) 0%, rgba(35, 48, 85, 0.6) 50%, rgba(26, 53, 85, 0.5) 100%);"
						/>
					</div>

					<!-- Campo Teléfono -->
					<div class="relative">
						<div class="absolute top-4 right-4 flex gap-1.5">
							<div class="w-2 h-2 rounded-full" style="background: #b8a9ff;"></div>
							<div class="w-2 h-2 rounded-full" style="background: #b8a9ff;"></div>
							<div class="w-2 h-2 rounded-full" style="background: #b8a9ff;"></div>
						</div>
						<input 
							type="tel" 
							name="telefono" 
							placeholder="Teléfono"
							class="w-full px-5 py-4 rounded-2xl bg-transparent border border-purple-400/30 text-white placeholder-gray-400 focus:outline-none focus:border-purple-400/60 transition-all duration-300"
							style="backdrop-filter: blur(10px); background: linear-gradient(135deg, rgba(26, 53, 85, 0.7) 0%, rgba(32, 48, 90, 0.6) 50%, rgba(35, 40, 80, 0.5) 100%);"
						/>
					</div>
				</div>

				<!-- Campo Mensaje -->
				<div class="relative">
					<div class="absolute top-4 right-4 flex gap-1.5 z-10">
						<div class="w-2 h-2 rounded-full" style="background: #b8a9ff;"></div>
						<div class="w-2 h-2 rounded-full" style="background: #b8a9ff;"></div>
						<div class="w-2 h-2 rounded-full" style="background: #b8a9ff;"></div>
					</div>
				<textarea 
					name="mensaje" 
					placeholder="Cuéntanos sobre tu proyecto o necesidades*"
					required
					rows="5"
					class="w-full px-5 py-4 rounded-2xl bg-transparent border border-purple-400/30 text-white placeholder-gray-400 focus:outline-none focus:border-purple-400/60 transition-all duration-300 resize-none"
					style="backdrop-filter: blur(10px); background: linear-gradient(135deg, rgba(42, 32, 80, 0.7) 0%, rgba(35, 45, 90, 0.65) 33%, rgba(29, 50, 85, 0.6) 66%, rgba(38, 42, 85, 0.55) 100%);"
				></textarea>
				</div>

				<!-- Botón Enviar -->
				<div class="relative group">
					<button 
						type="submit"
						class="w-full px-6 py-4 rounded-2xl font-semibold text-white transition-all duration-300 hover:scale-[1.02] active:scale-[0.98]"
						style="background: linear-gradient(135deg, #6a5acd 0%, #9d8df1 100%); box-shadow: 0 0 30px rgba(157, 141, 241, 0.3);"
					>
						ENVIAR MENSAJE
					</button>
				</div>

				<p class="text-xs sm:text-sm text-gray-400 text-center mt-4">
					* Campos obligatorios
				</p>
			</form>
		</div>

		<!-- Número 09 y línea en el bottom -->
		<div class="w-full pb-4 sm:pb-6 md:pb-8 px-4 sm:px-6 md:px-8 lg:px-16">
			<div class="flex justify-end items-end mb-2">
				<span class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold leading-none" style="color: #b8a9ff; text-shadow: 0 0 40px rgba(184, 169, 255, 0.3);">
					09
				</span>
			</div>
			<div class="w-full h-0.5" style="background: linear-gradient(to right, transparent 0%, #b8a9ff 50%, transparent 100%);"></div>
		</div>

		<!-- Efectos de luz sutiles -->
		<div class="absolute inset-0 opacity-25 pointer-events-none">
			<div class="absolute top-0 right-0 w-1/3 h-1/3" style="background: radial-gradient(circle at top right, rgba(157, 141, 241, 0.4) 0%, rgba(100, 150, 255, 0.2) 50%, transparent 70%); filter: blur(80px);"></div>
			<div class="absolute bottom-0 left-0 w-1/3 h-1/3" style="background: radial-gradient(circle at bottom left, rgba(106, 90, 205, 0.4) 0%, rgba(80, 130, 200, 0.2) 50%, transparent 70%); filter: blur(80px);"></div>
			<div class="absolute top-1/2 left-1/2 w-1/4 h-1/4 transform -translate-x-1/2 -translate-y-1/2" style="background: radial-gradient(circle, rgba(120, 100, 220, 0.3) 0%, transparent 70%); filter: blur(100px);"></div>
		</div>
	</section>

	<Navigation currentPage={9} totalPages={9} />
</BaseLayout>
