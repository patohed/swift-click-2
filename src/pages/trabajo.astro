---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
---

<BaseLayout title="SwiftClick - Nuestra Forma de Trabajo">
	<section class="min-h-screen relative z-10 overflow-hidden" style="width: 100vw; height: 100vh; background: linear-gradient(to right, #0f0f1a 0%, #1d2545 30%, #2d3a70 60%, #3d4a85 100%);">
		<!-- Header con logo -->
		<header class="absolute top-0 left-0 w-full z-20 p-4 sm:p-6 md:p-8">
			<div class="flex items-center">
				<!-- Logo -->
				<div class="flex items-center space-x-2 sm:space-x-3">
					<!-- SwiftClick Icon -->
					<div class="relative">
						<svg class="w-8 h-8 sm:w-10 sm:h-10" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M20 0L24.6 15.4L40 20L24.6 24.6L20 40L15.4 24.6L0 20L15.4 15.4L20 0Z" fill="white"/>
						</svg>
					</div>
					<!-- Brand Text -->
					<div>
						<div class="text-xl sm:text-2xl font-bold tracking-tight">
							<span class="text-white">Swift</span><span class="text-blue-400">Click</span>
						</div>
					</div>
				</div>
			</div>
			<!-- Marketing Digital Subtitle -->
			<div class="mt-3 ml-10 sm:mt-4 sm:ml-12">
				<span class="text-gray-300 text-xs sm:text-sm font-medium tracking-wide">Marketing Digital</span>
			</div>
		</header>

		<!-- NÃºmero gigante 02 -->
		<div class="absolute pointer-events-none" style="bottom: -2%; right: -5%; margin: 0; line-height: 0;">
			<span class="font-extralight select-none block" style="font-size: clamp(20rem, 60vw, 50rem); color: #b8a9ff; opacity: 0.9; line-height: 0.75; margin: 0; padding: 0; display: block;">
				02
			</span>
		</div>

		<!-- Texto inferior izquierdo -->
		<div class="absolute bottom-8 left-4 sm:bottom-12 sm:left-8 md:bottom-16 md:left-16 z-10">
			<h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-light text-white leading-tight">
				Nuestra forma<br>de trabajo
			</h2>
		</div>
	</section>

	<Navigation currentPage={5} totalPages={6} />
</BaseLayout>
