---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Logo from '../components/Logo.astro';
---

<BaseLayout title="SwiftClick - Nuestra Forma de Trabajo">
	<section class="hidden sm:block min-h-screen relative z-10 overflow-hidden" style="width: 100vw; min-height: 100vh; background: linear-gradient(to right, #0f0f1a 0%, #1d2545 30%, #2d3a70 60%, #3d4a85 100%);">
		<!-- Header con logo -->
		<header class="absolute top-0 left-0 w-full z-20 p-3 sm:p-4 md:p-6 lg:p-8">
			<div class="flex items-center">
				<Logo size="sm" />
			</div>
			<!-- Marketing Digital Subtitle -->
			<div class="mt-2 ml-8 sm:mt-3 sm:ml-10 md:mt-4 md:ml-12">
				<span class="text-gray-300 text-xs sm:text-sm font-medium tracking-wide">Marketing Digital</span>
			</div>
		</header>

		<!-- Número gigante 02 -->
		<div class="absolute pointer-events-none" style="bottom: -2%; right: -5%; margin: 0; line-height: 0;">
			<span class="font-extralight select-none block" style="font-size: clamp(10rem, 50vw, 50rem); color: #b8a9ff; opacity: 0.9; line-height: 0.75; margin: 0; padding: 0; display: block;">
				05
			</span>
		</div>

		<!-- Texto inferior izquierdo -->
		<div class="absolute bottom-6 left-3 sm:bottom-8 sm:left-4 md:bottom-12 md:left-8 lg:bottom-16 lg:left-16 z-10">
			<h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-light text-white leading-tight">
				Nuestra forma<br>de trabajo
			</h2>
		</div>
	</section>

		<Navigation currentPage={5} totalPages={11} />

	<script>
		// Redirigir a la siguiente página en móvil
		if (window.innerWidth < 640) {
			window.location.href = '/integracion';
		}
	</script>
</BaseLayout>
