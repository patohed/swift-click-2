---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Logo from '../components/Logo.astro';
---

<BaseLayout title="Nuestra Visión - SwiftClick">
	<section class="min-h-screen relative z-10 overflow-hidden px-4 sm:px-6 md:px-8 lg:px-16 flex flex-col" style="width: 100vw; min-height: 100vh; background: linear-gradient(to bottom right, #0a0a0f 0%, #13131f 50%, #1a1a2e 100%);">
		
		<!-- Luz blanco-violeta arriba a la derecha -->
		<div class="absolute top-0 right-0 w-1/2 sm:w-1/3 h-1/4 sm:h-1/3 pointer-events-none" style="background: radial-gradient(ellipse at top right, rgba(255, 255, 255, 0.15) 0%, rgba(200, 184, 255, 0.12) 20%, rgba(157, 141, 241, 0.08) 40%, transparent 70%); filter: blur(60px); sm:filter:blur(80px);"></div>
		
		<!-- Logo en la esquina superior izquierda -->
		<div class="absolute top-4 sm:top-6 md:top-8 left-3 sm:left-4 md:left-6 lg:left-8 xl:left-16 z-20">
			<Logo variant="default" size="md" showText={true} />
		</div>

		<!-- Contenedor principal centrado -->
		<div class="flex-1 flex flex-col items-center justify-center max-w-6xl mx-auto w-full py-12 sm:py-16 md:py-20 pt-20 sm:pt-16">
			
			<!-- Caja título NUESTRA VISIÓN -->
			<div class="mb-8 sm:mb-12 md:mb-16 lg:mb-20">
				<div class="px-6 sm:px-10 md:px-14 lg:px-20 py-3 sm:py-4 md:py-5 lg:py-6" style="background: linear-gradient(135deg, #4a3a7a 0%, #3a2a6a 100%);">
					<h1 class="text-lg sm:text-xl md:text-2xl lg:text-3xl xl:text-4xl 2xl:text-5xl text-white tracking-wide uppercase text-center font-light">
						NUESTRA VISIÓN
					</h1>
				</div>
			</div>

			<!-- Texto principal -->
			<div class="max-w-5xl text-center px-2">
				<p class="text-sm sm:text-base md:text-lg lg:text-xl xl:text-2xl 2xl:text-3xl text-white leading-relaxed" style="font-weight: 500;">
					SER EL <span style="color: #b8a9ff; font-weight: 700;">HUB REGIONAL</span> QUE CONECTA INVERSIÓN<br class="hidden sm:block">
					DIGITAL CON PERFORMANCE REAL.<br class="hidden sm:block">
					CONSTRUIMOS UN MODELO DONDE ANUNCIANTES<br class="hidden sm:block">
					Y AGENCIAS PUEDEN ADMINISTRAR <span style="color: #b8a9ff; font-weight: 700;">TODA SU<br class="hidden sm:block">
					INVERSIÓN DIGITAL</span> DESDE UN ÚNICO PARTNER<br class="hidden sm:block">
					ESPECIALIZADO, SÓLIDO Y ESCALABLE.
				</p>
			</div>
		</div>

		<!-- Número 07 y línea en el bottom -->
		<div class="absolute bottom-0 left-0 right-0 pb-4 sm:pb-6 md:pb-8">
			<div class="px-4 sm:px-6 md:px-8 lg:px-16">
				<div class="flex justify-end items-end mb-2" style="margin-right: 5px;">
					<span class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold leading-none" style="color: #b8a9ff; text-shadow: 0 0 40px rgba(184, 169, 255, 0.3);">
						07
					</span>
				</div>
				<div class="w-full h-0.5" style="background: linear-gradient(to right, transparent 0%, #b8a9ff 50%, transparent 100%);"></div>
			</div>
		</div>

		<Navigation currentPage={7} totalPages={9} />
	</section>
</BaseLayout>
