---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Logo from '../components/Logo.astro';
---

<BaseLayout title="Nuestra Visión - SwiftClick">
	<section class="min-h-screen relative z-10 overflow-hidden px-4 sm:px-6 md:px-8 lg:px-16 flex flex-col" style="width: 100vw; height: 100vh; background: linear-gradient(to bottom right, #0a0a0f 0%, #13131f 50%, #1a1a2e 100%);">
		
		<!-- Luz blanco-violeta arriba a la derecha -->
		<div class="absolute top-0 right-0 w-1/3 h-1/3 pointer-events-none" style="background: radial-gradient(ellipse at top right, rgba(255, 255, 255, 0.15) 0%, rgba(200, 184, 255, 0.12) 20%, rgba(157, 141, 241, 0.08) 40%, transparent 70%); filter: blur(80px);"></div>
		
		<!-- Logo en la esquina superior izquierda -->
		<div class="absolute top-6 sm:top-8 left-4 sm:left-6 md:left-8 lg:left-16 z-20">
			<Logo variant="default" size="md" showText={true} />
		</div>

		<!-- Contenedor principal centrado -->
		<div class="flex-1 flex flex-col items-center justify-center max-w-6xl mx-auto w-full py-16 sm:py-20">
			
			<!-- Caja título NUESTRA VISIÓN -->
			<div class="mb-12 sm:mb-16 md:mb-20">
				<div class="px-12 sm:px-16 md:px-20 py-4 sm:py-5 md:py-6" style="background: linear-gradient(135deg, #4a3a7a 0%, #3a2a6a 100%);">
					<h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl text-white tracking-wide uppercase text-center font-light">
						NUESTRA VISIÓN
					</h1>
				</div>
			</div>

			<!-- Texto principal -->
			<div class="max-w-5xl text-center">
				<p class="text-xl sm:text-2xl md:text-3xl lg:text-4xl text-white leading-relaxed" style="font-weight: 500;">
					SER EL <span style="color: #b8a9ff; font-weight: 700;">HUB REGIONAL</span> QUE CONECTA INVERSIÓN<br>
					DIGITAL CON PERFORMANCE REAL.<br>
					CONSTRUIMOS UN MODELO DONDE ANUNCIANTES<br>
					Y AGENCIAS PUEDEN ADMINISTRAR <span style="color: #b8a9ff; font-weight: 700;">TODA SU<br>
					INVERSIÓN DIGITAL</span> DESDE UN ÚNICO PARTNER<br>
					ESPECIALIZADO, SÓLIDO Y ESCALABLE.
				</p>
			</div>
		</div>

		<!-- Número 06 y línea en el bottom -->
		<div class="absolute bottom-0 left-0 right-0 pb-6 sm:pb-8">
			<div class="px-4 sm:px-6 md:px-8 lg:px-16">
				<div class="flex justify-end items-end mb-2" style="margin-right: 5px;">
					<span class="text-4xl sm:text-5xl md:text-6xl font-bold leading-none" style="color: #b8a9ff; text-shadow: 0 0 40px rgba(184, 169, 255, 0.3);">
						06
					</span>
				</div>
				<div class="w-full h-0.5" style="background: linear-gradient(to right, transparent 0%, #b8a9ff 50%, transparent 100%);"></div>
			</div>
		</div>

		<Navigation currentPage={9} totalPages={11} />
	</section>
</BaseLayout>
