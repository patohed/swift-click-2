---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
---

<BaseLayout title="SwiftClick - About Us">
	<section class="min-h-screen relative z-10 overflow-hidden" style="width: 100vw; min-height: 100vh; background: linear-gradient(to right, #000000 0%, #1a1a2e 20%, #2d3561 40%, #4a5b99 60%, #6b7ec7 80%, #89a7ff 100%);">
		<div class="flex flex-col md:flex-row items-end min-h-screen pb-6 sm:pb-8 md:pb-12 lg:pb-16 overflow-hidden">
			<!-- Lado izquierdo: Texto -->
			<div class="w-full md:w-1/2 px-4 sm:px-6 md:px-8 lg:px-12 xl:px-16 mb-6 md:mb-0 pt-20 md:pt-0">
				<div class="max-w-lg">
					<h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-normal text-gray-300 mb-2 sm:mb-3 md:mb-4 tracking-wide">
						Introduccion
					</h2>
					<h3 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-normal text-white mb-4 sm:mb-6 md:mb-8 leading-tight">
						About Us
					</h3>
				</div>
			</div>

			<!-- Lado derecho: NÃºmero grande -->
			<div class="w-full md:w-1/2 flex items-end justify-center h-full">
				<div class="text-center" style="line-height: 0.8; transform: translateY(calc(15% - 20px));">
					<span class="text-[8rem] sm:text-[12rem] md:text-[18rem] lg:text-[28rem] xl:text-[40rem] font-light leading-none block" style="color: #b8a9ff; text-shadow: 0 0 40px rgba(184, 169, 255, 0.4); line-height: 0.7;">
						01
					</span>
				</div>
			</div>
		</div>

		<!-- Efectos de luz sutiles -->
		<div class="absolute inset-0 opacity-15 sm:opacity-20">
			<div class="absolute right-0 top-1/4 w-32 h-32 sm:w-48 sm:h-48 md:w-64 md:h-64" style="background: radial-gradient(circle, rgba(184, 169, 255, 0.4) 0%, transparent 70%);"></div>
			<div class="absolute left-0 bottom-1/4 w-32 h-32 sm:w-48 sm:h-48 md:w-64 md:h-64" style="background: radial-gradient(circle, rgba(45, 53, 97, 0.6) 0%, transparent 70%);"></div>
		</div>
	</section>

		<Navigation currentPage={2} totalPages={11} />
</BaseLayout>
