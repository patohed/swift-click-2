---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
---

<BaseLayout title="SwiftClick - About Us">
	<section class="min-h-screen relative z-10 overflow-hidden" style="width: 100vw; min-height: 100vh; background: linear-gradient(to right, #000000 0%, #1a1a2e 20%, #2d3561 40%, #4a5b99 60%, #6b7ec7 80%, #89a7ff 100%);">
		<div class="flex flex-col min-h-screen pb-6 sm:pb-8 md:pb-12 lg:pb-16 overflow-hidden">
			<!-- Lado izquierdo: Texto -->
			<div class="w-full px-4 sm:px-6 md:px-8 lg:px-12 xl:px-16 pt-20 sm:pt-32 md:pt-40">
				<div class="max-w-lg">
					<h2 class="text-base sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl font-normal text-gray-300 mb-2 sm:mb-3 md:mb-4 tracking-wide">
						Introduccion
					</h2>
					<h3 class="text-xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-normal text-white mb-4 sm:mb-6 md:mb-8 leading-tight">
						About Us
					</h3>
				</div>
			</div>

			<!-- Lado derecho: NÃºmero grande -->
			<div class="flex-1 flex items-end justify-center md:justify-end px-4 sm:px-6 md:px-8 pb-6 sm:pb-12 md:pb-16">
				<div class="text-center md:text-right" style="line-height: 0.8;">
					<span class="text-[6rem] sm:text-[10rem] md:text-[18rem] lg:text-[28rem] xl:text-[40rem] font-light leading-none block" style="color: #b8a9ff; text-shadow: 0 0 40px rgba(184, 169, 255, 0.4); line-height: 0.7;">
						02
					</span>
				</div>
			</div>
		</div>

		<!-- Efectos de luz sutiles -->
		<div class="absolute inset-0 opacity-15 sm:opacity-20">
			<div class="absolute right-0 top-1/4 w-32 h-32 sm:w-48 sm:h-48 md:w-64 md:h-64" style="background: radial-gradient(circle, rgba(184, 169, 255, 0.4) 0%, transparent 70%);"></div>
			<div class="absolute left-0 bottom-1/4 w-32 h-32 sm:w-48 sm:h-48 md:w-64 md:h-64" style="background: radial-gradient(circle, rgba(45, 53, 97, 0.6) 0%, transparent 70%);"></div>
		</div>
	</section>

		<Navigation currentPage={2} totalPages={11} />
</BaseLayout>
