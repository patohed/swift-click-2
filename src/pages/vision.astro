---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Logo from '../components/Logo.astro';
---

<BaseLayout title="Nuestra Visión - SwiftClick">
	<section class="min-h-screen relative z-10 overflow-hidden px-4 sm:px-6 md:px-8 lg:px-16 flex flex-col" style="width: 100vw; height: 100vh; background: linear-gradient(to right, #0f0f1a 0%, #1d2545 30%, #2d3a70 60%, #3d4a85 100%);">
		
		<!-- Logo en la esquina superior izquierda -->
		<div class="absolute top-6 sm:top-8 left-4 sm:left-6 md:left-8 lg:left-16 z-20">
			<Logo variant="default" size="md" showText={true} />
		</div>

		<!-- Contenedor principal -->
		<div class="absolute bottom-8 sm:bottom-12 left-4 sm:left-6 md:left-8 lg:left-16 z-10">
			<h1 class="text-xl sm:text-2xl md:text-3xl font-extralight text-white leading-tight tracking-wider" style="font-weight: 200;">
				Nuestra<br>visión
			</h1>
		</div>

		<!-- Número gigante 03 alineado a la derecha y abajo -->
		<div class="absolute right-0 pointer-events-none" style="overflow: hidden; line-height: 0; bottom: -50px;">
			<span class="text-[28rem] sm:text-[35rem] md:text-[42rem] lg:text-[50rem] xl:text-[58rem] tracking-tighter" style="color: #b8a9ff; opacity: 0.5; font-weight: 200; margin-right: -40px; display: block; line-height: 0.8;">
				03
			</span>
		</div>

		<Navigation currentPage={8} totalPages={11} />
	</section>
</BaseLayout>
