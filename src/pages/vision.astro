---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Logo from '../components/Logo.astro';
---

<BaseLayout title="Nuestra Visión - SwiftClick">
	<section class="hidden sm:flex min-h-screen relative z-10 overflow-hidden px-4 sm:px-6 md:px-8 lg:px-16 flex-col" style="width: 100vw; min-height: 100vh; background: linear-gradient(to right, #0f0f1a 0%, #1d2545 30%, #2d3a70 60%, #3d4a85 100%);">
		
		<!-- Logo en la esquina superior izquierda -->
		<div class="absolute top-4 sm:top-6 md:top-8 left-3 sm:left-4 md:left-6 lg:left-8 xl:left-16 z-20">
			<Logo variant="default" size="md" showText={true} />
		</div>

		<!-- Contenedor principal -->
		<div class="absolute bottom-6 sm:bottom-8 md:bottom-12 left-3 sm:left-4 md:left-6 lg:left-8 xl:left-16 z-10">
			<h1 class="text-lg sm:text-xl md:text-2xl lg:text-3xl font-extralight text-white leading-tight tracking-wider" style="font-weight: 200;">
				Nuestra<br>visión
			</h1>
		</div>

		<!-- Número gigante 08 alineado a la derecha y abajo -->
		<div class="absolute right-0 pointer-events-none" style="overflow: hidden; line-height: 0; bottom: -30px; sm:bottom:-40px; md:bottom:-50px;">
			<span class="tracking-tighter" style="font-size: clamp(12rem, 40vw, 58rem); color: #b8a9ff; opacity: 0.5; font-weight: 200; margin-right: -20px; display: block; line-height: 0.8;">
				08
			</span>
		</div>

		<Navigation currentPage={8} totalPages={11} />
	</section>

	<script>
		// Redirigir a la siguiente página en móvil
		if (window.innerWidth < 640) {
			window.location.href = '/vision-detalle';
		}
	</script>
</BaseLayout>
