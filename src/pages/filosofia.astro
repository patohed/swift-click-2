---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
---

<BaseLayout title="SwiftClick - Filosofía">
	<section class="min-h-screen relative z-10 overflow-hidden px-4 sm:px-6 md:px-8 lg:px-16 flex flex-col" style="width: 100vw; min-height: 100vh; background: radial-gradient(circle at top right, #9d8df1 0%, #6a5acd 8%, #3a3a5a 20%, #1a1a2e 35%, #0f0f1a 50%, #080810 100%);">
		<!-- Texto principal centrado verticalmente -->
		<div class="flex-1 flex items-center justify-center py-20 sm:py-12 md:py-16 lg:py-20">
			<div class="max-w-6xl mx-auto">
				<h2 class="text-xl sm:text-2xl md:text-3xl lg:text-5xl xl:text-6xl 2xl:text-7xl font-bold leading-tight text-center px-2">
					<span class="text-white">Swiftclick </span>
					<span class="text-white px-2 sm:px-3 md:px-4 py-1 sm:py-1.5 md:py-2 rounded-lg inline-block" style="background: linear-gradient(135deg, #4a3570 0%, #5a4585 100%);">no reemplaza nada,</span>
					<br class="hidden sm:block">
					<span class="text-white px-2 sm:px-3 md:px-4 py-1 sm:py-1.5 md:py-2 rounded-lg inline-block mt-2 sm:mt-3 md:mt-4" style="background: linear-gradient(135deg, #4a3570 0%, #5a4585 100%);">potencia</span>
					<span class="text-white"> lo que el cliente y sus</span>
					<br class="hidden sm:block">
					<span class="text-white">agencias ya tienen.</span>
				</h2>
			</div>
		</div>

		<!-- Número 03 y línea en el bottom -->
		<div class="max-w-7xl mx-auto w-full pb-4 sm:pb-6 md:pb-8">
			<div class="flex justify-end items-end mb-2 sm:mb-3">
				<span class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold leading-none" style="color: #b8a9ff; text-shadow: 0 0 40px rgba(184, 169, 255, 0.3);">
					03
				</span>
			</div>
			<div class="w-full h-px bg-purple-300/20"></div>
		</div>

		<!-- Efectos de luz -->
		<div class="absolute inset-0 opacity-20 sm:opacity-30 pointer-events-none">
			<div class="absolute right-0 top-0 w-32 sm:w-48 md:w-64 h-full" style="background: linear-gradient(to left, rgba(157, 141, 241, 0.4) 0%, transparent 100%);"></div>
			<div class="absolute top-0 right-0 w-48 h-48 sm:w-64 sm:h-64 md:w-96 md:h-96" style="background: radial-gradient(circle at top right, rgba(157, 141, 241, 0.6) 0%, rgba(138, 101, 238, 0.4) 40%, transparent 70%);"></div>
		</div>
	</section>

	<Navigation currentPage={3} totalPages={9} />
</BaseLayout>
