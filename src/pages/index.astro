---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Logo from '../components/Logo.astro';
---

<BaseLayout title="SwiftClick - Home">
	<section class="min-h-screen relative z-10 overflow-hidden flex flex-col" style="width: 100vw; min-height: 100vh; background: radial-gradient(ellipse 150% 100% at center, #000000 0%, #1a1a2e 40%, #16213e 60%, #6a5acd 85%, #9d8df1 100%);">
		<!-- Header -->
		<header class="w-full z-20 p-4 sm:p-4 md:p-6 lg:p-8">
			<div class="flex items-center">
				<Logo size="sm" />
			</div>
			<!-- Marketing Digital Subtitle -->
			<div class="mt-2 ml-8 sm:mt-3 sm:ml-10 md:mt-4 md:ml-12">
				<span class="text-gray-300 text-xs sm:text-sm md:text-base font-medium tracking-wide">Marketing Digital</span>
			</div>
		</header>

		<!-- Main Content -->
		<main class="flex-1 flex items-center justify-start px-4 sm:px-6 md:px-8 lg:px-16 py-8 sm:py-0">
			<div class="max-w-4xl w-full">
				<!-- Main Headline -->
				<h1 class="text-xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-7xl font-bold leading-tight mb-3 sm:mb-6 md:mb-8">
					<span class="text-purple-300">Partner</span> 
					<span class="text-purple-200">Estratégico</span> 
					<span class="text-white">en</span> 
					<span class="text-white">Inversión</span><br>
					<span class="text-white">Digital</span> 
					<span class="text-white">a</span> 
					<span class="text-purple-200">Gran</span> 
					<span class="text-purple-200">Escala</span>
				</h1>

				<!-- Decorative Line -->
				<div class="w-full h-px bg-gradient-to-r from-purple-400 via-blue-400 to-transparent mb-6 sm:mb-8 md:mb-10 lg:mb-12"></div>

				<!-- Company Name -->
				<h2 class="text-lg sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl font-bold text-purple-300 mb-2 sm:mb-4 md:mb-6">
					Swiftclick S.A.
				</h2>

				<!-- Description -->
				<p class="text-xs sm:text-base md:text-lg lg:text-xl xl:text-2xl text-gray-300 font-medium tracking-wide leading-relaxed">
					Google Partner — Multicanal — Performance & Escalabilidad
				</p>
			</div>
		</main>

		<!-- Número 01 y línea en el bottom -->
		<div class="w-full pb-4 sm:pb-6 md:pb-8 px-4 sm:px-6 md:px-8 lg:px-16">
			<div class="flex justify-end items-end mb-2">
				<span class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold leading-none" style="color: #b8a9ff; text-shadow: 0 0 40px rgba(184, 169, 255, 0.3);">
					01
				</span>
			</div>
			<div class="w-full h-0.5" style="background: linear-gradient(to right, transparent 0%, #b8a9ff 50%, transparent 100%);"></div>
		</div>

		<!-- Light effects on sides -->
		<div class="absolute inset-0 opacity-20 sm:opacity-30 pointer-events-none">
			<!-- Side lighting effects -->
			<div class="absolute left-0 top-0 w-32 sm:w-48 md:w-64 h-full" style="background: linear-gradient(to right, rgba(157, 141, 241, 0.4) 0%, transparent 100%);"></div>
			<div class="absolute right-0 top-0 w-32 sm:w-48 md:w-64 h-full" style="background: linear-gradient(to left, rgba(157, 141, 241, 0.4) 0%, transparent 100%);"></div>
			
			<!-- Additional corner lights -->
			<div class="absolute top-0 right-0 w-48 h-48 sm:w-64 sm:h-64 md:w-96 md:h-96" style="background: radial-gradient(circle at top right, rgba(157, 141, 241, 0.6) 0%, rgba(138, 101, 238, 0.4) 40%, transparent 70%);"></div>
			<div class="absolute bottom-0 left-0 w-48 h-48 sm:w-64 sm:h-64 md:w-96 md:h-96" style="background: radial-gradient(circle at bottom left, rgba(157, 141, 241, 0.6) 0%, rgba(138, 101, 238, 0.4) 40%, transparent 70%);"></div>
		</div>
	</section>

		<Navigation currentPage={1} totalPages={11} />
</BaseLayout>
