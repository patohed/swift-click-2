---
import '../styles/global.css'
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>SwiftClick S.A. - Marketing Digital</title>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
	</head>
	<body class="bg-gray-900 text-white font-['Inter']">
		<div class="scroll-container" style="display: flex; overflow-x: scroll; overflow-y: hidden; scroll-snap-type: x mandatory; scroll-behavior: smooth; height: 100vh; width: 100vw; perspective: 1000px;">
			<!-- Primera sección: Hero -->
			<section class="min-h-screen relative z-10 flex-shrink-0" style="scroll-snap-align: start; scroll-snap-stop: always; width: 100vw; height: 100vh; background: radial-gradient(ellipse 150% 100% at center, #000000 0%, #1a1a2e 40%, #16213e 60%, #6a5acd 85%, #9d8df1 100%);">
				<!-- Header -->
			<header class="absolute top-0 left-0 w-full z-20 p-4 sm:p-6 md:p-8">
				<div class="flex items-center">
					<!-- Logo -->
					<div class="flex items-center space-x-2 sm:space-x-3">
						<!-- SwiftClick Icon -->
						<div class="relative">
							<svg class="w-8 h-8 sm:w-10 sm:h-10" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M20 0L24.6 15.4L40 20L24.6 24.6L20 40L15.4 24.6L0 20L15.4 15.4L20 0Z" fill="white"/>
							</svg>
						</div>
						<!-- Brand Text -->
						<div>
							<div class="text-xl sm:text-2xl font-bold tracking-tight">
								<span class="text-white">Swift</span><span class="text-blue-400">Click</span>
							</div>
						</div>
					</div>
				</div>
				<!-- Marketing Digital Subtitle -->
				<div class="mt-3 ml-10 sm:mt-4 sm:ml-12">
					<span class="text-gray-300 text-xs sm:text-sm font-medium tracking-wide">Marketing Digital</span>
				</div>
			</header>

			<!-- Main Content -->
			<main class="flex items-center justify-start min-h-screen px-4 sm:px-6 md:px-8 lg:px-16">
				<div class="max-w-4xl w-full">
					<!-- Main Headline -->
					<h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-7xl font-bold leading-tight mb-6 sm:mb-8">
						<span class="text-purple-300">Partner</span> 
						<span class="text-purple-200">Estratégico</span> 
						<span class="text-white">en</span> 
						<span class="text-white">Inversión</span><br>
						<span class="text-white">Digital</span> 
						<span class="text-white">a</span> 
						<span class="text-purple-200">Gran</span> 
						<span class="text-purple-200">Escala</span>
					</h1>

					<!-- Decorative Line -->
					<div class="w-full h-px bg-gradient-to-r from-purple-400 via-blue-400 to-transparent mb-8 sm:mb-12"></div>

					<!-- Company Name -->
					<h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-purple-300 mb-4 sm:mb-6">
						Swiftclick S.A.
					</h2>

					<!-- Description -->
					<p class="text-base sm:text-lg md:text-xl lg:text-2xl text-gray-300 font-medium tracking-wide">
						Google Partner — Multicanal — Performance & Escalabilidad
					</p>
				</div>
			</main>

			<!-- Light effects on sides -->
			<div class="absolute inset-0 opacity-30">
				<!-- Side lighting effects -->
				<div class="absolute left-0 top-0 w-64 h-full" style="background: linear-gradient(to right, rgba(157, 141, 241, 0.4) 0%, transparent 100%);"></div>
				<div class="absolute right-0 top-0 w-64 h-full" style="background: linear-gradient(to left, rgba(157, 141, 241, 0.4) 0%, transparent 100%);"></div>
				
				<!-- Additional corner lights -->
				<div class="absolute top-0 right-0 w-96 h-96" style="background: radial-gradient(circle at top right, rgba(157, 141, 241, 0.6) 0%, rgba(138, 101, 238, 0.4) 40%, transparent 70%);"></div>
				<div class="absolute bottom-0 left-0 w-96 h-96" style="background: radial-gradient(circle at bottom left, rgba(157, 141, 241, 0.6) 0%, rgba(138, 101, 238, 0.4) 40%, transparent 70%);"></div>
			</div>
		</section>

			<!-- Segunda sección: Introducción / About Us -->
			<section class="min-h-screen relative z-10 overflow-hidden flex-shrink-0" style="scroll-snap-align: start; scroll-snap-stop: always; width: 100vw; height: 100vh; background: linear-gradient(to right, #000000 0%, #1a1a2e 20%, #2d3561 40%, #4a5b99 60%, #6b7ec7 80%, #89a7ff 100%);">
				<!-- Contenido de la segunda sección -->
			<div class="flex flex-col md:flex-row items-end min-h-screen pb-8 sm:pb-12 md:pb-16 overflow-hidden">
				<!-- Lado izquierdo: Texto -->
				<div class="w-full md:w-1/2 px-4 sm:px-8 md:px-12 lg:px-16 mb-8 md:mb-0">
					<div class="max-w-lg">
						<h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-normal text-gray-300 mb-3 sm:mb-4 tracking-wide">
							Introduccion
						</h2>
						<h3 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-normal text-white mb-6 sm:mb-8 leading-tight">
							About Us
						</h3>
					</div>
				</div>

				<!-- Lado derecho: Número grande -->
				<div class="w-full md:w-1/2 flex items-end justify-center h-full">
					<div class="text-center" style="line-height: 0.8; transform: translateY(calc(20% - 38px));">
						<span class="text-[15rem] sm:text-[20rem] md:text-[30rem] lg:text-[40rem] font-light leading-none block" style="color: #b8a9ff; text-shadow: 0 0 60px rgba(184, 169, 255, 0.4); line-height: 0.7;">
							01
						</span>
					</div>
				</div>
			</div>

			<!-- Efectos de luz sutiles -->
			<div class="absolute inset-0 opacity-20">
				<div class="absolute right-0 top-1/4 w-64 h-64" style="background: radial-gradient(circle, rgba(184, 169, 255, 0.4) 0%, transparent 70%);"></div>
				<div class="absolute left-0 bottom-1/4 w-64 h-64" style="background: radial-gradient(circle, rgba(45, 53, 97, 0.6) 0%, transparent 70%);"></div>
			</div>
		</section>

			<!-- Tercera sección: Nuestro diferencial -->
			<section class="min-h-screen relative z-10 overflow-y-auto px-4 sm:px-6 md:px-8 lg:px-16 flex flex-col justify-center flex-shrink-0" style="scroll-snap-align: start; scroll-snap-stop: always; width: 100vw; height: 100vh; background: linear-gradient(to bottom, #0a0a0f 0%, #13131f 50%, #1a1a2e 100%);">
				<div class="py-12 sm:py-16 md:py-20">
				<!-- Título principal -->
				<div class="max-w-7xl mx-auto mb-12 sm:mb-16 md:mb-20 mt-8 sm:mt-12 md:mt-16">
					<div class="rounded-3xl px-8 sm:px-12 md:px-16 py-12 sm:py-16 md:py-20 text-center border border-purple-500/20" style="background: linear-gradient(to right, #4a3570 0%, #3d2b5f 25%, #2a1f4a 50%, #3d2b5f 75%, #4a3570 100%);">
						<h2 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-white tracking-tight">
							Nuestro diferencial
						</h2>
					</div>
				</div>

			<!-- Grid de tarjetas - 4 en línea horizontal -->
			<div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-4 gap-4 sm:gap-5 mb-8 sm:mb-12">
				<!-- Tarjeta 1: Un único interlocutor -->
				<div class="rounded-xl p-5 sm:p-6 relative" style="background: linear-gradient(135deg, #2a2050 0%, #1a2545 100%);">
					<!-- Tres puntos -->
					<div class="absolute top-4 right-4 flex space-x-1">
						<div class="w-1.5 h-1.5 rounded-full bg-purple-300/60"></div>
						<div class="w-1.5 h-1.5 rounded-full bg-purple-300/60"></div>
						<div class="w-1.5 h-1.5 rounded-full bg-purple-300/60"></div>
					</div>
					
					<h3 class="text-sm sm:text-base font-semibold text-purple-200 mb-4 uppercase tracking-wide leading-tight">
						UN ÚNICO<br>INTERLOCUTOR PARA<br>TODA LA INVERSIÓN
					</h3>
					<div class="w-full h-px bg-purple-300/30 mb-4"></div>
					<p class="text-white text-xs sm:text-sm leading-relaxed">
						Centralizamos consultas, soporte y decisiones operativas. Los equipos dejan de correr detrás de temas administrativos y vuelven a enfocarse en estrategia.
					</p>
				</div>

				<!-- Tarjeta 2: Anticipación -->
				<div class="rounded-xl p-5 sm:p-6 relative" style="background: linear-gradient(135deg, #1d2550 0%, #1a3555 100%);">
					<!-- Tres puntos -->
					<div class="absolute top-4 right-4 flex space-x-1">
						<div class="w-1.5 h-1.5 rounded-full bg-purple-300/60"></div>
						<div class="w-1.5 h-1.5 rounded-full bg-purple-300/60"></div>
						<div class="w-1.5 h-1.5 rounded-full bg-purple-300/60"></div>
					</div>
					
					<h3 class="text-sm sm:text-base font-semibold text-purple-200 mb-4 uppercase tracking-wide">
						ANTICIPACIÓN, NO<br>REACCIÓN
					</h3>
					<div class="w-full h-px bg-purple-300/30 mb-4"></div>
					<p class="text-white text-xs sm:text-sm leading-relaxed">
						Detectamos riesgos, límites, inconsistencias y desajustes antes de que afecten la inversión. Prevenimos interrupciones y garantizamos continuidad.
					</p>
				</div>

				<!-- Tarjeta 3: Velocidad -->
				<div class="rounded-xl p-5 sm:p-6 relative" style="background: linear-gradient(135deg, #2a2050 0%, #1d3560 100%);">
					<!-- Tres puntos -->
					<div class="absolute top-4 right-4 flex space-x-1">
						<div class="w-1.5 h-1.5 rounded-full bg-purple-300/60"></div>
						<div class="w-1.5 h-1.5 rounded-full bg-purple-300/60"></div>
						<div class="w-1.5 h-1.5 rounded-full bg-purple-300/60"></div>
					</div>
					
					<h3 class="text-sm sm:text-base font-semibold text-purple-200 mb-4 uppercase tracking-wide">
						VELOCIDAD PARA<br>CRECER
					</h3>
					<div class="w-full h-px bg-purple-300/30 mb-4"></div>
					<p class="text-white text-xs sm:text-sm leading-relaxed">
						Simplificamos flujos internos y acortamos tiempos de respuesta. Lo operativo deja de ser un freno y pasa a acompañar el ritmo de negocio.
					</p>
				</div>

				<!-- Tarjeta 4: Google Partner -->
				<div class="rounded-xl p-5 sm:p-6 relative" style="background: linear-gradient(135deg, #1d2550 0%, #2a4570 100%);">
					<!-- Tres puntos -->
					<div class="absolute top-4 right-4 flex space-x-1">
						<div class="w-1.5 h-1.5 rounded-full bg-purple-300/60"></div>
						<div class="w-1.5 h-1.5 rounded-full bg-purple-300/60"></div>
						<div class="w-1.5 h-1.5 rounded-full bg-purple-300/60"></div>
					</div>
					
					<h3 class="text-sm sm:text-base font-semibold text-purple-200 mb-4 uppercase tracking-wide">
						GOOGLE<br>PARTNER
					</h3>
					<div class="w-full h-px bg-purple-300/30 mb-4"></div>
					<p class="text-white text-xs sm:text-sm leading-relaxed">
						Respaldo, compliance, mejores prácticas y acceso premium.
					</p>
				</div>
			</div>

			<!-- Número 02 -->
				<div class="max-w-7xl mx-auto flex justify-end items-end border-t border-purple-300/20 pt-4">
					<span class="text-7xl sm:text-8xl md:text-9xl font-light leading-none" style="color: #b8a9ff; text-shadow: 0 0 40px rgba(184, 169, 255, 0.3);">
						02
					</span>
				</div>
			</div>

			<!-- Efectos de luz -->
			<div class="absolute inset-0 opacity-30 pointer-events-none">
				<div class="absolute left-0 top-0 w-64 h-full" style="background: linear-gradient(to right, rgba(157, 141, 241, 0.4) 0%, transparent 100%);"></div>
				<div class="absolute right-0 top-0 w-64 h-full" style="background: linear-gradient(to left, rgba(157, 141, 241, 0.4) 0%, transparent 100%);"></div>
				<div class="absolute top-0 right-0 w-96 h-96" style="background: radial-gradient(circle at top right, rgba(157, 141, 241, 0.6) 0%, rgba(138, 101, 238, 0.4) 40%, transparent 70%);"></div>
			</div>
		</section>

			<!-- Cuarta sección: Swiftclick no reemplaza nada -->
			<section class="min-h-screen relative z-10 overflow-hidden px-4 sm:px-6 md:px-8 lg:px-16 flex flex-col flex-shrink-0" style="scroll-snap-align: start; scroll-snap-stop: always; width: 100vw; height: 100vh; background: radial-gradient(circle at top right, #9d8df1 0%, #6a5acd 8%, #3a3a5a 20%, #1a1a2e 35%, #0f0f1a 50%, #080810 100%);">
				<!-- Texto principal centrado verticalmente -->
			<div class="flex-1 flex items-center justify-center py-12 sm:py-16 md:py-20">
				<div class="max-w-6xl mx-auto">
					<h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold leading-tight text-center">
						<span class="text-white">Swiftclick </span>
						<span class="text-white px-3 sm:px-4 py-1 sm:py-2 rounded-lg inline-block" style="background: linear-gradient(135deg, #4a3570 0%, #5a4585 100%);">no reemplaza nada,</span>
						<br class="hidden sm:block">
						<span class="text-white px-3 sm:px-4 py-1 sm:py-2 rounded-lg inline-block mt-2 sm:mt-4" style="background: linear-gradient(135deg, #4a3570 0%, #5a4585 100%);">potencia</span>
						<span class="text-white"> lo que el cliente y sus</span>
						<br class="hidden sm:block">
						<span class="text-white">agencias ya tienen.</span>
					</h2>
				</div>
			</div>

			<!-- Número 03 y línea en el bottom -->
			<div class="max-w-7xl mx-auto w-full pb-6 sm:pb-8">
				<div class="flex justify-end items-end mb-3">
					<span class="text-5xl sm:text-6xl md:text-7xl font-bold leading-none" style="color: #b8a9ff; text-shadow: 0 0 40px rgba(184, 169, 255, 0.3);">
						03
					</span>
				</div>
				<div class="w-full h-px bg-purple-300/20"></div>
			</div>

			<!-- Efectos de luz -->
			<div class="absolute inset-0 opacity-30 pointer-events-none">
				<div class="absolute right-0 top-0 w-64 h-full" style="background: linear-gradient(to left, rgba(157, 141, 241, 0.4) 0%, transparent 100%);"></div>
				<div class="absolute top-0 right-0 w-96 h-96" style="background: radial-gradient(circle at top right, rgba(157, 141, 241, 0.6) 0%, rgba(138, 101, 238, 0.4) 40%, transparent 70%);"></div>
			</div>
		</section>

			<!-- Quinta sección: Nuestra forma de trabajo -->
			<section class="min-h-screen relative z-10 overflow-hidden flex-shrink-0" style="scroll-snap-align: start; scroll-snap-stop: always; width: 100vw; height: 100vh; background: linear-gradient(to right, #0f0f1a 0%, #1d2545 30%, #2d3a70 60%, #3d4a85 100%);">
				<!-- Header con logo -->
			<header class="absolute top-0 left-0 w-full z-20 p-4 sm:p-6 md:p-8">
				<div class="flex items-center">
					<!-- Logo -->
					<div class="flex items-center space-x-2 sm:space-x-3">
						<!-- SwiftClick Icon -->
						<div class="relative">
							<svg class="w-8 h-8 sm:w-10 sm:h-10" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M20 0L24.6 15.4L40 20L24.6 24.6L20 40L15.4 24.6L0 20L15.4 15.4L20 0Z" fill="white"/>
							</svg>
						</div>
						<!-- Brand Text -->
						<div>
							<div class="text-xl sm:text-2xl font-bold tracking-tight">
								<span class="text-white">Swift</span><span class="text-blue-400">Click</span>
							</div>
						</div>
					</div>
				</div>
				<!-- Marketing Digital Subtitle -->
				<div class="mt-3 ml-10 sm:mt-4 sm:ml-12">
					<span class="text-gray-300 text-xs sm:text-sm font-medium tracking-wide">Marketing Digital</span>
				</div>
			</header>

			<!-- Número gigante 02 -->
			<div class="absolute pointer-events-none" style="bottom: -2%; right: -5%; margin: 0; line-height: 0;">
				<span class="font-extralight select-none block" style="font-size: clamp(20rem, 60vw, 50rem); color: #b8a9ff; opacity: 0.9; line-height: 0.75; margin: 0; padding: 0; display: block;">
					02
				</span>
			</div>

			<!-- Texto inferior izquierdo -->
			<div class="absolute bottom-8 left-4 sm:bottom-12 sm:left-8 md:bottom-16 md:left-16 z-10">
				<h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-light text-white leading-tight">
					Nuestra forma<br>de trabajo
				</h2>
			</div>
		</section>

			<!-- Sexta sección: Nos integramos sin cambiar estructuras -->
			<section class="min-h-screen relative z-10 overflow-y-auto px-4 sm:px-6 md:px-8 lg:px-16 flex flex-col flex-shrink-0" style="scroll-snap-align: start; scroll-snap-stop: always; width: 100vw; height: 100vh; background: linear-gradient(to bottom, #0a0a0f 0%, #13131f 50%, #1a1a2e 100%);">
				<div class="flex-1 py-12 sm:py-16 md:py-20">
				<!-- Título principal -->
				<div class="max-w-7xl mx-auto mb-12 sm:mb-16 md:mb-20">
					<h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold text-white text-center leading-tight">
						Nos integramos sin<br>cambiar estructuras.
					</h2>
				</div>

			<!-- Grid de contenido -->
			<div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-6 sm:gap-8 mb-16">
				<!-- Columna izquierda: 3 tarjetas -->
				<div class="flex flex-col gap-6">
					<!-- Tarjeta 1 - más azul -->
					<div class="rounded-3xl p-6 sm:p-8" style="background: linear-gradient(135deg, #1d2850 0%, #2d4575 100%);">
						<p class="text-white text-base sm:text-lg leading-relaxed">
							Operamos sobre MCC existentes y respetamos setups y agencias actuales.
						</p>
					</div>

					<!-- Tarjeta 2 - más violeta -->
					<div class="rounded-3xl p-6 sm:p-8" style="background: linear-gradient(135deg, #2a2a55 0%, #3d3d7a 100%);">
						<p class="text-white text-base sm:text-lg leading-relaxed">
							Trabajamos con una modalidad de planes de financiación de acuerdo a cada cliente.
						</p>
					</div>

					<!-- Tarjeta 3 - azul medio -->
					<div class="rounded-3xl p-6 sm:p-8" style="background: linear-gradient(135deg, #1d2850 0%, #2d4a85 100%);">
						<p class="text-white text-base sm:text-lg leading-relaxed">
							Nos comprometemos a traerles orden, soporte y estabilidad.
						</p>
					</div>
				</div>

				<!-- Columna derecha: 2 tarjetas -->
				<div class="flex flex-col gap-6">
					<!-- Tarjeta superior - más violeta -->
					<div class="rounded-3xl p-6 sm:p-8" style="background: linear-gradient(135deg, #2a2a55 0%, #3d3d80 100%);">
						<p class="text-white text-base sm:text-lg leading-relaxed">
							Con nuestra línea de crédito la inversión fluye sin interrupciones y con posibilidad de escalar que sin ella no se podría lograr.
						</p>
					</div>

					<!-- Tarjeta inferior grande - más violeta con azul -->
					<div class="rounded-3xl p-6 sm:p-8 md:p-10" style="background: linear-gradient(135deg, #2a2a5a 0%, #3d4a95 100%);">
						<h3 class="text-xl sm:text-2xl md:text-3xl font-bold mb-4" style="color: #b8a9ff;">
							NUESTRA ALTA POR LA<br>PLATAFORMA
						</h3>

						<p class="text-white font-semibold text-base sm:text-lg mb-6">
							ID de Cuenta de Google:
						</p>

						<div class="space-y-4">
							<div class="flex items-start gap-3">
								<div class="w-2 h-2 rounded-full bg-purple-300 mt-2 flex-shrink-0"></div>
								<p class="text-white text-sm sm:text-base leading-relaxed">
									Vincular la cuenta a nuestro MCC para luego configurar nuestra LC como método de pago.
								</p>
							</div>

							<div class="flex items-start gap-3">
								<div class="w-2 h-2 rounded-full bg-purple-300 mt-2 flex-shrink-0"></div>
								<p class="text-white text-sm sm:text-base leading-relaxed">
									Creo una cuenta nueva de cero dentro de nuestro MCC.
								</p>
							</div>
						</div>
					</div>
				</div>
			</div>

			</div>

			<!-- Número 04 y línea en el bottom -->
			<div class="absolute bottom-0 left-0 right-0 pb-6 sm:pb-8">
				<div class="px-4 sm:px-6 md:px-8 lg:px-16">
					<div class="flex justify-end items-end mb-2" style="margin-right: 5px;">
						<span class="text-4xl sm:text-5xl md:text-6xl font-bold leading-none" style="color: #b8a9ff; text-shadow: 0 0 40px rgba(184, 169, 255, 0.3);">
							04
						</span>
					</div>
					<div class="w-full h-px bg-purple-300/20"></div>
				</div>
			</div>

				<!-- Efectos de luz -->
				<div class="absolute inset-0 opacity-30 pointer-events-none">
					<div class="absolute left-0 top-0 w-64 h-full" style="background: linear-gradient(to right, rgba(157, 141, 241, 0.4) 0%, transparent 100%);"></div>
					<div class="absolute top-0 left-0 w-96 h-96" style="background: radial-gradient(circle at top left, rgba(157, 141, 241, 0.6) 0%, rgba(138, 101, 238, 0.4) 40%, transparent 70%);"></div>
				</div>
			</section>
		</div>

		<!-- Botones de navegación -->
		<div class="fixed right-8 top-1/2 transform -translate-y-1/2 z-50 flex gap-4">
			<button id="prevBtn" class="nav-btn opacity-50 hover:opacity-100 transition-opacity duration-300 disabled:opacity-30 disabled:cursor-not-allowed" aria-label="Página anterior">
				<svg class="w-12 h-12" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
					<circle cx="12" cy="12" r="11" stroke="#b8a9ff" stroke-width="2" fill="rgba(184, 169, 255, 0.1)"/>
					<path d="M16 12L8 12M8 12L12 8M8 12L12 16" stroke="#b8a9ff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
				</svg>
			</button>
			<button id="nextBtn" class="nav-btn opacity-50 hover:opacity-100 transition-opacity duration-300" aria-label="Siguiente página">
				<svg class="w-12 h-12" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
					<circle cx="12" cy="12" r="11" stroke="#b8a9ff" stroke-width="2" fill="rgba(184, 169, 255, 0.1)"/>
					<path d="M8 12L16 12M16 12L12 8M16 12L12 16" stroke="#b8a9ff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
				</svg>
			</button>
		</div>

		<!-- Script de navegación -->
		<script>
			let currentSection = 0;
			const container = document.querySelector('.scroll-container') as HTMLDivElement;
			const sections = document.querySelectorAll('section');
			const prevBtn = document.getElementById('prevBtn') as HTMLButtonElement;
			const nextBtn = document.getElementById('nextBtn') as HTMLButtonElement;

			function updateButtons() {
				if (prevBtn && nextBtn) {
					prevBtn.disabled = currentSection === 0;
					nextBtn.disabled = currentSection === sections.length - 1;
				}
			}

			function scrollToSection(index: number) {
				if (index >= 0 && index < sections.length && container) {
					currentSection = index;
					container.scrollTo({
						left: index * window.innerWidth,
						behavior: 'smooth'
					});
					updateButtons();
				}
			}

			// Detectar scroll manual horizontal
			let scrollTimeout: number;
			container?.addEventListener('scroll', () => {
				clearTimeout(scrollTimeout);
				scrollTimeout = window.setTimeout(() => {
					if (container) {
						const scrollPosition = container.scrollLeft;
						const newSection = Math.round(scrollPosition / window.innerWidth);
						if (newSection !== currentSection) {
							currentSection = newSection;
							updateButtons();
						}
					}
				}, 100);
			});

			prevBtn?.addEventListener('click', () => {
				scrollToSection(currentSection - 1);
			});

			nextBtn?.addEventListener('click', () => {
				scrollToSection(currentSection + 1);
			});

			// Navegación con teclado (izquierda/derecha)
			window.addEventListener('keydown', (e) => {
				if (e.key === 'ArrowLeft' || e.key === 'PageUp') {
					e.preventDefault();
					scrollToSection(currentSection - 1);
				} else if (e.key === 'ArrowRight' || e.key === 'PageDown') {
					e.preventDefault();
					scrollToSection(currentSection + 1);
				}
			});

			updateButtons();

			// Efectos visuales avanzados de transición
			let isAnimating = false;
			const ANIMATION_DURATION = 1200; // ms

			function animatePageTransition(targetIndex: number) {
				if (isAnimating || targetIndex === currentSection) return;
				if (targetIndex < 0 || targetIndex >= sections.length) return;

				isAnimating = true;
				const direction = targetIndex > currentSection ? 1 : -1;
				const currentPage = sections[currentSection] as HTMLElement;
				const targetPage = sections[targetIndex] as HTMLElement;

				// Preparar la página de destino
				targetPage.style.transition = 'none';
				targetPage.style.opacity = '0';
				
				// Efecto de página saliendo
				currentPage.style.transition = `all ${ANIMATION_DURATION}ms cubic-bezier(0.85, 0, 0.15, 1)`;
				currentPage.style.transform = `translateX(${direction * -30}%) scale(0.9) rotateY(${direction * 15}deg)`;
				currentPage.style.opacity = '0.3';
				currentPage.style.filter = 'blur(8px)';

				// Efecto de página entrando después de un pequeño delay
				setTimeout(() => {
					targetPage.style.transition = `all ${ANIMATION_DURATION * 0.8}ms cubic-bezier(0.34, 1.56, 0.64, 1)`;
					targetPage.style.opacity = '1';
					targetPage.style.transform = `translateX(0) scale(1) rotateY(0deg)`;
					targetPage.style.filter = 'blur(0px)';

					// Scroll suave al destino
					if (container) {
						container.scrollTo({
							left: targetIndex * window.innerWidth,
							behavior: 'smooth'
						});
					}
				}, ANIMATION_DURATION * 0.2);

				// Restaurar estados después de la animación
				setTimeout(() => {
					currentPage.style.transition = 'none';
					currentPage.style.transform = 'translateX(0) scale(1) rotateY(0deg)';
					currentPage.style.opacity = '1';
					currentPage.style.filter = 'blur(0px)';
					
					currentSection = targetIndex;
					updateButtons();
					isAnimating = false;
				}, ANIMATION_DURATION);
			}

			// Partículas flotantes durante la transición
			function createTransitionParticles(direction: number) {
				const particleContainer = document.createElement('div');
				particleContainer.className = 'particle-container';
				particleContainer.style.cssText = `
					position: fixed;
					top: 0;
					left: 0;
					width: 100vw;
					height: 100vh;
					pointer-events: none;
					z-index: 100;
				`;
				document.body.appendChild(particleContainer);

				// Crear 20 partículas
				for (let i = 0; i < 20; i++) {
					const particle = document.createElement('div');
					const size = Math.random() * 6 + 2;
					const startX = direction > 0 ? -50 : window.innerWidth + 50;
					const endX = direction > 0 ? window.innerWidth + 50 : -50;
					const y = Math.random() * window.innerHeight;
					const duration = Math.random() * 800 + 600;
					const delay = Math.random() * 200;

					particle.style.cssText = `
						position: absolute;
						width: ${size}px;
						height: ${size}px;
						background: radial-gradient(circle, rgba(184, 169, 255, 0.8) 0%, rgba(157, 141, 241, 0.3) 100%);
						border-radius: 50%;
						left: ${startX}px;
						top: ${y}px;
						opacity: 0;
						animation: particleFloat${i} ${duration}ms ease-out ${delay}ms forwards;
						box-shadow: 0 0 20px rgba(184, 169, 255, 0.6);
					`;

					const keyframes = `
						@keyframes particleFloat${i} {
							0% {
								transform: translateX(0) translateY(0) scale(0);
								opacity: 0;
							}
							20% {
								opacity: 1;
								transform: translateX(${(endX - startX) * 0.2}px) translateY(${Math.random() * 100 - 50}px) scale(1);
							}
							80% {
								opacity: 1;
								transform: translateX(${(endX - startX) * 0.8}px) translateY(${Math.random() * 150 - 75}px) scale(1.2);
							}
							100% {
								transform: translateX(${endX - startX}px) translateY(${Math.random() * 200 - 100}px) scale(0);
								opacity: 0;
							}
						}
					`;

					const styleSheet = document.createElement('style');
					styleSheet.textContent = keyframes;
					document.head.appendChild(styleSheet);

					particleContainer.appendChild(particle);
				}

				// Remover el contenedor después de la animación
				setTimeout(() => {
					particleContainer.remove();
				}, 1500);
			}

			// Efecto de onda luminosa
			function createLightWave(direction: number) {
				const wave = document.createElement('div');
				wave.style.cssText = `
					position: fixed;
					top: 0;
					${direction > 0 ? 'left: 0' : 'right: 0'};
					width: 3px;
					height: 100vh;
					background: linear-gradient(to ${direction > 0 ? 'right' : 'left'}, 
						rgba(184, 169, 255, 0) 0%, 
						rgba(184, 169, 255, 1) 50%, 
						rgba(184, 169, 255, 0) 100%);
					box-shadow: 0 0 50px rgba(184, 169, 255, 0.8), 0 0 100px rgba(157, 141, 241, 0.4);
					z-index: 99;
					pointer-events: none;
					animation: waveMove 800ms ease-out forwards;
				`;

				const keyframes = `
					@keyframes waveMove {
						0% {
							transform: translateX(0) scaleY(0);
							opacity: 0;
						}
						30% {
							opacity: 1;
							transform: translateX(${direction * 200}px) scaleY(1);
						}
						100% {
							transform: translateX(${direction * window.innerWidth}px) scaleY(0.5);
							opacity: 0;
						}
					}
				`;

				const styleSheet = document.createElement('style');
				styleSheet.textContent = keyframes;
				document.head.appendChild(styleSheet);
				document.body.appendChild(wave);

				setTimeout(() => wave.remove(), 1000);
			}

			// Sobrescribir la función scrollToSection con efectos
			const originalScrollToSection = scrollToSection;
			scrollToSection = function(index: number) {
				if (index >= 0 && index < sections.length && !isAnimating) {
					const direction = index > currentSection ? 1 : -1;
					
					// Crear efectos visuales
					createTransitionParticles(direction);
					createLightWave(direction);
					
					// Animar transición
					animatePageTransition(index);
				}
			};

			// Estilo CSS para suavizar transiciones base
			const baseStyles = document.createElement('style');
			baseStyles.textContent = `
				section {
					transform-style: preserve-3d;
					backface-visibility: hidden;
					will-change: transform, opacity;
				}

				.scroll-container {
					scroll-behavior: auto !important; /* Desactivar scroll nativo para usar animaciones personalizadas */
				}

				.nav-btn {
					transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
					transform-style: preserve-3d;
				}

				.nav-btn:hover:not(:disabled) {
					transform: scale(1.1) translateZ(10px);
					filter: drop-shadow(0 0 20px rgba(184, 169, 255, 0.6));
				}

				.nav-btn:active:not(:disabled) {
					transform: scale(0.95);
				}

				/* Efecto de desenfoque en los bordes durante scroll */
				.scroll-container::before,
				.scroll-container::after {
					content: '';
					position: fixed;
					top: 0;
					width: 100px;
					height: 100vh;
					pointer-events: none;
					z-index: 40;
					opacity: 0;
					transition: opacity 0.3s ease;
				}

				.scroll-container::before {
					left: 0;
					background: linear-gradient(to right, rgba(0, 0, 0, 0.8) 0%, transparent 100%);
				}

				.scroll-container::after {
					right: 0;
					background: linear-gradient(to left, rgba(0, 0, 0, 0.8) 0%, transparent 100%);
				}

				.scroll-container.scrolling::before,
				.scroll-container.scrolling::after {
					opacity: 1;
				}

				@media (prefers-reduced-motion: reduce) {
					* {
						animation-duration: 0.01ms !important;
						animation-iteration-count: 1 !important;
						transition-duration: 0.01ms !important;
					}
				}
			`;
			document.head.appendChild(baseStyles);

			// Efecto parallax en el cursor
			let mouseX = 0;
			let mouseY = 0;

			window.addEventListener('mousemove', (e) => {
				mouseX = (e.clientX / window.innerWidth - 0.5) * 2;
				mouseY = (e.clientY / window.innerHeight - 0.5) * 2;

				const currentPage = sections[currentSection] as HTMLElement;
				if (currentPage && !isAnimating) {
					// Aplicar efecto parallax sutil a elementos con clase específica
					const parallaxElements = currentPage.querySelectorAll('h1, h2, h3, .rounded-3xl, .rounded-xl');
					parallaxElements.forEach((el, index) => {
						const htmlEl = el as HTMLElement;
						const depth = (index + 1) * 2;
						htmlEl.style.transform = `translate(${mouseX * depth}px, ${mouseY * depth}px)`;
						htmlEl.style.transition = 'transform 0.3s ease-out';
					});
				}
			});

			// Efecto de ripple al hacer clic
			function createRipple(x: number, y: number) {
				const ripple = document.createElement('div');
				ripple.style.cssText = `
					position: fixed;
					left: ${x}px;
					top: ${y}px;
					width: 0;
					height: 0;
					border-radius: 50%;
					background: radial-gradient(circle, rgba(184, 169, 255, 0.4) 0%, transparent 70%);
					pointer-events: none;
					z-index: 999;
					animation: rippleEffect 1s ease-out forwards;
				`;

				const keyframes = `
					@keyframes rippleEffect {
						0% {
							width: 0;
							height: 0;
							margin-left: 0;
							margin-top: 0;
							opacity: 1;
						}
						100% {
							width: 500px;
							height: 500px;
							margin-left: -250px;
							margin-top: -250px;
							opacity: 0;
						}
					}
				`;

				const styleSheet = document.createElement('style');
				styleSheet.textContent = keyframes;
				document.head.appendChild(styleSheet);
				document.body.appendChild(ripple);

				setTimeout(() => ripple.remove(), 1000);
			}

			// Añadir ripple a los botones de navegación
			prevBtn?.addEventListener('click', (e) => {
				createRipple(e.clientX, e.clientY);
			});

			nextBtn?.addEventListener('click', (e) => {
				createRipple(e.clientX, e.clientY);
			});

			// Efecto de resplandor al pasar el mouse por los bordes
			window.addEventListener('mousemove', (e) => {
				const edgeThreshold = 100;
				const distanceFromLeft = e.clientX;
				const distanceFromRight = window.innerWidth - e.clientX;

				if (container) {
					if (distanceFromLeft < edgeThreshold && currentSection > 0) {
						container.classList.add('scrolling');
					} else if (distanceFromRight < edgeThreshold && currentSection < sections.length - 1) {
						container.classList.add('scrolling');
					} else {
						container.classList.remove('scrolling');
					}
				}
			});

			// Precargar imágenes y optimizar rendimiento
			sections.forEach((section, index) => {
				const htmlSection = section as HTMLElement;
				// Aplicar will-change solo a la sección actual y adyacentes
				if (Math.abs(index - currentSection) <= 1) {
					htmlSection.style.willChange = 'transform, opacity';
				} else {
					htmlSection.style.willChange = 'auto';
				}
			});

			// Actualizar will-change al cambiar de sección
			const originalUpdateButtons = updateButtons;
			updateButtons = function() {
				originalUpdateButtons();
				
				sections.forEach((section, index) => {
					const htmlSection = section as HTMLElement;
					if (Math.abs(index - currentSection) <= 1) {
						htmlSection.style.willChange = 'transform, opacity';
					} else {
						htmlSection.style.willChange = 'auto';
					}
				});
			};
		</script>
	</body>
