	keywords="google partner argentina, marketing digital argentina, inversión digital, google ads, performance marketing, partner certificado, swiftclick"
>
<script>
	document.addEventListener('DOMContentLoaded', () => {
		const sections = document.querySelectorAll('section');
		
		window.addEventListener('scroll', () => {
			const scrollY = window.scrollY;
			
			sections.forEach((section, index) => {
				const rect = section.getBoundingClientRect();
				const sectionTop = rect.top + scrollY;
				const offset = scrollY - sectionTop;
				const speed = 0.5;
				
				// Parallax para elementos dentro de la sección
				const parallaxElements = section.querySelectorAll('[data-parallax]');
				parallaxElements.forEach((el) => {
					const customSpeed = parseFloat(el.getAttribute('data-parallax') || '0.3');
					const yPos = -(offset * customSpeed);
					el.style.transform = `translateY(${yPos}px)`;
				});
				
				// Parallax para backgrounds
				if (rect.top < window.innerHeight && rect.bottom > 0) {
					const yPos = offset * speed;
					section.style.backgroundPositionY = `${yPos}px`;
				}
			});
		});
	});
</script>
