---
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';

interface Props {
	title?: string;
}

const { title = 'SwiftClick S.A. - Marketing Digital' } = Astro.props;
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, minimum-scale=1.0, user-scalable=yes" />
		<meta name="generator" content={Astro.generator} />
		<meta name="theme-color" content="#1a1a2e" />
		<meta name="description" content="SwiftClick S.A. - Partner Estratégico en Inversión Digital a Gran Escala. Google Partner, Multicanal, Performance & Escalabilidad." />
		<title>{title}</title>
		<!-- Tipografías según Manual de Marca SwiftClick -->
		<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
		<link href="https://fonts.cdnfonts.com/css/tt-commons" rel="stylesheet">
		<ViewTransitions />
		<style is:global>
			/* Asegurar que el body siempre tenga fondo oscuro */
			html, body {
				background: #0a0a0f;
				min-height: 100vh;
			}

			@keyframes fadeIn {
				from {
					opacity: 0;
				}
				to {
					opacity: 1;
				}
			}

			@keyframes fadeOut {
				from {
					opacity: 1;
				}
				to {
					opacity: 0;
				}
			}

			::view-transition-old(root) {
				animation: fadeOut 0.8s ease-out;
			}

			::view-transition-new(root) {
				animation: fadeIn 0.8s ease-in;
			}

			/* Mantener el fondo oscuro durante la transición */
			::view-transition-group(root) {
				animation-duration: 0.8s;
			}

			html[data-direction="back"]::view-transition-new(root) {
				animation: slideFromLeft 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
			}
		</style>
	</head>
	<body class="bg-gray-900 text-white overflow-hidden" style="font-family: 'TT Commons', 'Roboto', sans-serif;">
		<slot />
	</body>
</html>
