---
interface Props {
	variant?: 'default' | 'light' | 'dark';
	size?: 'sm' | 'md' | 'lg';
	showText?: boolean;
}

const { variant = 'default', size = 'md', showText = true } = Astro.props;

const sizeClasses = {
	sm: 'w-10 h-10 sm:w-16 sm:h-16',
	md: 'w-16 h-16 sm:w-24 sm:h-24',
	lg: 'w-20 h-20 sm:w-32 sm:h-32'
};

const textSizeClasses = {
	sm: 'text-base sm:text-2xl',
	md: 'text-lg sm:text-3xl',
	lg: 'text-xl sm:text-4xl'
};
---

<div class="flex items-center space-x-2 sm:space-x-3">
	<!-- SwiftClick Logo SVG -->
	<div class="relative">
		<img 
			src="/swift_click.svg" 
			alt="SwiftClick Logo" 
			class={sizeClasses[size]}
		/>
	</div>
	

</div>
